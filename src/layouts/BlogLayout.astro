---
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.svelte'
import './blog.css'
const { frontmatter } = Astro.props
---

<html>
  <head>
    <title>{frontmatter.title}</title>
  </head>

  <body class="flex flex-col min-h-[100vh]">
    <div class="grow-0">
      <Nav client:idle />
    </div>

    <div class="grow max-w-screen-lg mx-auto px-3 py-6 md:px-0">
      <!-- title -->
      <h1 class="text-4xl font-bold text-center pt-6">{frontmatter.title}</h1>

      <!-- info -->
      <div class="flex justify-center items-center text-center pt-3 pb-6">
        <div>
          <p class="text-center">
            Published At: {frontmatter.pubDate.split('T')[0] ?? ''}
          </p>
        </div>
      </div>

      <img
        class="w-full rounded-md overflow-hidden mt-6"
        src={frontmatter?.image?.url}
        alt={frontmatter?.image?.alt}
      />

      <div class="blog-content px-3 py-6 mb-8">
        <!-- Markdown content is injected here -->
        <!-- ... -->
        <slot />
      </div>
    </div>

    <div class="grow-0">
      <Footer />
    </div>
  </body>
</html>
