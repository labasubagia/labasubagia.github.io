---
import Nav from '../components/Nav.svelte'
import './blog.css'
const { frontmatter } = Astro.props
---

<html>
  <Nav client:idle />

  <div class="max-w-screen-lg mx-auto px-3 py-6 md:px-0">
    <!-- title -->
    <h1 class="text-4xl font-bold text-center">{frontmatter.title}</h1>

    <!-- info -->
    <div class="flex justify-center items-center text-center py-6">
      <div>
        <p class="text-center">
          Published At: {frontmatter.pubDate.split('T')[0] ?? ''}
        </p>
        <p class="text-center">Author: {frontmatter.author}</p>
      </div>
    </div>

    <img
      class="w-full rounded-md overflow-hidden"
      src={frontmatter?.image?.url}
      alt={frontmatter?.image?.alt}
    />

    <div class="blog-content px-3 py-6">
      <!-- Markdown content is injected here -->
      <!-- ... -->
      <slot />
    </div>
  </div>
</html>
